<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.imooc.gmall.manage.mapper.BaseAttrInfoMapper">
    <resultMap id="baseAttrInfoMap" type="com.imooc.gmall.BaseAttrInfo" autoMapping="true">
        <id property="id" column="id"></id>

        <collection property="attrValueList" ofType="com.imooc.gmall.BaseAttrValue" autoMapping="true">
            <id property="id" column="attr_value_id"></id>
        </collection>
    </resultMap>
    <select id="getBaseAttrInfoListByCatalog3Id" resultMap="baseAttrInfoMap">
         SELECT
               bai.id,
               bai.attr_name,
               bai.catalog3_id,
               bav.id attr_value_id,
               bav.value_name
            FROM
               base_attr_info bai
            INNER JOIN base_attr_value bav ON bai.id = bav.attr_id
            WHERE
               catalog3_id = #{0}
    </select>
</mapper>